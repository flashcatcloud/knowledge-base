{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true, // 生成声明文件
    "declarationDir": "./dist", // 声明文件输出目录
    "emitDeclarationOnly": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*", "src/types.d.ts"], // 包含的文件
  "exclude": ["node_modules", "dist"] // 排除的文件
}
